<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head')%> 
<body>
    

    <%- include('../partials/header')%> 


<main>


    
    <br>
    <div class="contenedor-formularioCreate">
        <form action="/products" method="POST" enctype="multipart/form-data">
    
            <fieldset>
                <legend>Crear producto</legend>
               <div class="contenido-form">

                <div class="art-product">
                        <label for="">Nombre del producto</label>
                        <input type="text" name="name" placeholder="Ej: Cam Logitech " required>
                </div>


                <div class="art-product">

                        <label for="">Categoría</label>
                        <select name="categoryId">
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id%> "><%= category.name%></option>
                            <% }) %>
                        </select>
               </div>
            
  
                <div class="art-product">
                    <label for="">Precio </label>
                    <input type="text" name="price" placeholder="Precio" required>
                </div>

                <div class="art-product">
                        <label for="">Sección</label>
                        <select name="section">
                            <option value="Todos">Todos</option>
                            <option value="Ofertas">Ofertas</option>
                            <option value="Destacado">Destacado</option>
                        </select>
                </div>

                <div class="textarea">
                        <label for="">Descripción</label>
                        <textarea name="description" rows="8" cols="25" placeholder="Descripción del producto:" required></textarea>
                </div>

                <div class="art-product">
                    <label for="">Descripción extendida</label>
                        <textarea name="extended_description" rows="8" cols="25" placeholder="Descripción extendida del producto:" ></textarea>
                </div>
                <div class="art-product">
                    <label for="">Stock</label>
                    <input type="text" name="stock">
                </div>
                <div class="art-product">
                    <label for="">Stock minimo</label>
                    <input type="text" name="stock_min">
                </div>
                <div class="art-product">
                    <label for="">Stock maximo</label>
                    <input type="text" name="stock_max">
                </div>

                <div class="art-product">
                    <label for="">Color</label>
                    <select name="colorId">
                        <% colors.forEach(color => { %>
                            <option value="<%= color.id %> "><%= color.name  %> </option>
                        <% }) %>
                    </select>
                </div>

                <div class="art-product">
                    <label for="">Marca</label>
                    <select name="brandId">
                        <% brands.forEach(brand => { %>
                            <option value="<%= brand.id %> "><%= brand.name  %> </option>
                        <% }) %>
                    </select>
                </div>
              

                <div class="art-product">
                    <label>Imagen</label>
                    <input type="file"  class="img" name="image" placeholder="Imagen del artículo">
                </div>
               
                        <div class="btn-form">
                            
                            <button type="submit">Cargar producto</button>
                    </div>

                    <br><br><br><br>
                </div>
            </fieldset>
                </form>
                <!--Seguir editando-->
                <div class="editar">
                    <p><a href="/products" class="seguir"><i class="fas fa-chevron-circle-left"></i>Editar un producto existente</a></p>
                </div>
    </div>
</main>




    <%- include('../partials/footer')%>

</body>
</html>